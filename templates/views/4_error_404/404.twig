{% extends "base.twig" %}
{% block content %}

{% if fn('pll_current_language') == 'pl' %}
  {% set title = 'Ta strona nie istnieje' %}
  {% set button = 'Przejdź na stronę główną' %}
{% else %}
  {% set title = 'This page does not exist' %}
  {% set button = 'Go to the home page' %}
{% endif %}


<section class="grid error-404" style="text-align:center;padding:100px 0;">
	<h2 class="title-40">{{title}}</h2>
	<a class="button-2" href="{{fn('get_pll_home_url')}}">
		<span class="button-2--text">{{button}}</span>
	</a>
</section>


<style>
  .error-404 {
    width: 100%;
    height: 50vh;
    font-size: 2rem;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-align: center;
    align-items: center;
    -ms-flex-pack: center;
    justify-content: center;
    -ms-flex-direction: column;
    flex-direction: column;
  }
  .error-404 h2{
    margin-bottom: 3.2rem;
  }
</style>

{% endblock %}